<Window x:Class="EEMC.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EEMC.Views"
        xmlns:viewmodels="clr-namespace:EEMC.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowVM}"
        mc:Ignorable="d"
        Title="MainWindow" Height="540" Width="960" x:Name="MNWindow">

    <Window.DataContext>
        <viewmodels:MainWindowVM />
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="Button" x:Key="RoundButton">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10" />
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" x:Name="CoursesListWidth"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" Name="he"/>
        </Grid.RowDefinitions>

        <Grid>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl
                    Name="CoursesList"
                    ItemsSource="{Binding Path=Courses.Courses, Mode=OneWay}"
                    Grid.ColumnSpan="2"
                    Padding="0"
                    HorizontalContentAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="#EE5648">

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Style="{DynamicResource RoundButton}"
                                Content="{Binding Path=Name}"
                                Background="#FFFFFF"
                                Foreground="#EE5648"
                                Height="auto"
                                Width="auto"
                                HorizontalAlignment="Stretch"
                                Margin="10"
                                HorizontalContentAlignment="Center"
                                Padding="5"
                                BorderBrush="Red"
                                />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Frame
             Grid.Column="1"/>
    </Grid>
</Window>
