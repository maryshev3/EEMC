<Page x:Class="EEMC.Views.CoursesList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EEMC.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding CoursesListVM, Source={StaticResource ViewModelLocator}}"
      Title="CoursesList">

    <Page.Resources>
        <Style TargetType="Button" x:Key="RoundButton">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10" />
                </Style>
            </Style.Resources>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem 
                Header="Добавить курс"
                Command="{Binding Path=AddCourse_Click}"
                CommandParameter="{Binding}"/>
            </ContextMenu>
        </Grid.ContextMenu>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl
            Name="CourseList"
            ItemsSource="{Binding Path=Courses.Courses, Mode=OneWay}"
            Padding="0"
            HorizontalContentAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="#EE5648">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button
                        Style="{DynamicResource RoundButton}"
                        Content="{Binding Path=Name}"
                        Command="{Binding ElementName=CourseList, Path=DataContext.bMenu_Click}"
                        CommandParameter="{Binding}"
                        Background="#FFFFFF"
                        Foreground="#EE5648"
                        Height="auto"
                        Width="auto"
                        HorizontalAlignment="Stretch"
                        Margin="10"
                        HorizontalContentAlignment="Center"
                        Padding="5"
                        BorderBrush="Red"
                        >
                            <Button.ContextMenu>
                                <ContextMenu>
                                    <MenuItem 
                                    Header="Добавить курс"
                                    Command="{Binding Path=DataContext.AddCourse_Click, Source={x:Reference Name=CourseList}}"
                                    CommandParameter="{Binding}"/>
                                    <MenuItem 
                                    Header="Переименовать курс"
                                    Command="{Binding Path=DataContext.RenameCourse_Click, Source={x:Reference Name=CourseList}}"
                                    CommandParameter="{Binding}"/>
                                    <MenuItem 
                                    Header="Удалить курс"
                                    Command="{Binding Path=DataContext.RemoveCourse_Click, Source={x:Reference Name=CourseList}}"
                                    CommandParameter="{Binding}"/>
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
