<Page x:Class="EEMC.Views.CoursesList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EEMC.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding CoursesListVM, Source={StaticResource ViewModelLocator}}"
      Title="CoursesList">

    <Page.Resources>
        <Style TargetType="Button" x:Key="RoundButton">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10" />
                </Style>
            </Style.Resources>
        </Style>
    </Page.Resources>

    <Border CornerRadius="10" Padding="4" Background="White">
        <Grid>
            <Grid.ContextMenu>
                <ContextMenu>
                    <MenuItem 
                Header="Добавить курс"
                Command="{Binding Path=AddCourse_Click}"
                CommandParameter="{Binding}"/>
                </ContextMenu>
            </Grid.ContextMenu>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl
            Name="CourseList"
            ItemsSource="{Binding Path=Courses.Courses, Mode=OneWay}"
            Padding="0"
            Background="White">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Stretch"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button
                        Style="{DynamicResource RoundButton}"
                        Command="{Binding ElementName=CourseList, Path=DataContext.OpenCourse_Click}"
                        CommandParameter="{Binding}"
                        Background="#f7f7fa"
                        Height="140"
                        Width="220"
                        Margin="10"
                        Padding="0"
                        HorizontalContentAlignment="Center"
                        BorderBrush="#eaedf9"
                        >
                                <Grid Margin="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="100"/>
                                        <RowDefinition Height="40"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="220"/>
                                    </Grid.ColumnDefinitions>
                                    <Border BorderThickness="1" Grid.Row="0" CornerRadius="10,10,0,0">
                                        <Border.Background>
                                            <ImageBrush ImageSource="/Resources/course_img2.png" Stretch="Fill"/>
                                        </Border.Background>
                                    </Border>
                                    <TextBlock Grid.Row="1" Margin="5,0,0,0" Foreground="Black" HorizontalAlignment="Center" Text="{Binding Path=Name}" FontSize="16"/>
                                </Grid>
                                <Button.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem 
                                    Header="Добавить курс"
                                    Command="{Binding Path=DataContext.AddCourse_Click, Source={x:Reference Name=CourseList}}"
                                    CommandParameter="{Binding}"/>
                                        <MenuItem 
                                    Header="Переименовать курс"
                                    Command="{Binding Path=DataContext.RenameCourse_Click, Source={x:Reference Name=CourseList}}"
                                    CommandParameter="{Binding}"/>
                                        <MenuItem 
                                    Header="Удалить курс"
                                    Command="{Binding Path=DataContext.RemoveCourse_Click, Source={x:Reference Name=CourseList}}"
                                    CommandParameter="{Binding}"/>
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Border>
</Page>
