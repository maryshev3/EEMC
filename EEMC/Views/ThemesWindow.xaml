<Page x:Class="EEMC.Views.ThemesWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EEMC.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding ThemesWindowVM, Source={StaticResource ViewModelLocator}}"
      Title="ThemesWindow">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl
                Name="ThemesList"
                ItemsSource="{Binding Path=CurrentCourse.Themes, Mode=OneWay}"
                Padding="0"
                Background="#F5E7E3">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Height="150"
                            BorderThickness="2"
                            BorderBrush="Red"
                            Margin="10"
                            HorizontalAlignment="Stretch">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.2*"/>
                                    <RowDefinition Height="0.8*"/>
                                </Grid.RowDefinitions>
                                <Label Content="{Binding Path=ThemeName}" Grid.Row="0" FontWeight="Bold"/>
                                <Label Content="{Binding Path=ThemeDescription}" Grid.Row="1"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
