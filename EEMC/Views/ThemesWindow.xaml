<Page x:Class="EEMC.Views.ThemesWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EEMC.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding ThemesWindowVM, Source={StaticResource ViewModelLocator}}"
      Title="ThemesWindow">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="0.9*"/>
        </Grid.RowDefinitions>
        <Button Width="120" Height="50" Grid.Row="0" Command="{Binding AddTheme_Click}">
            Добавить тему урока
        </Button>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <ItemsControl
                Name="ThemesList"
                ItemsSource="{Binding Path=CurrentCourse.Themes, Mode=OneWay}"
                Padding="0"
                Background="#F5E7E3">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Height="150"
                            BorderThickness="2"
                            BorderBrush="Black"
                            Margin="10"
                            HorizontalAlignment="Stretch">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.9*"/>
                                    <ColumnDefinition Width="0.1*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.3*"/>
                                    <RowDefinition Height="0.7*"/>
                                </Grid.RowDefinitions>
                                <Label Content="{Binding Path=ThemeName}" Grid.Row="0" FontWeight="Bold" Grid.Column="0"/>
                                <Button
                                    Background="White"
                                    BorderThickness="0"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="10"
                                    Width="30"
                                    Command="{Binding ElementName=ThemesList, Path=DataContext.RenameTheme_Click}"
                                    CommandParameter="{Binding}">
                                    <Image Source="/Resources/modify_icon.png"/>
                                </Button>
                                <Grid Grid.Row="1" Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0.3*"/>
                                        <RowDefinition Height="0.7*"/>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Row="0" FontWeight="Bold">Описание темы:</Label>
                                    <Label Content="{Binding Path=ThemeDescription}" Grid.Row="1"/>
                                </Grid>
                                <Button
                                    Background="White"
                                    BorderThickness="0"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="10"
                                    Width="30">
                                    <Image Source="/Resources/modify_icon.png"/>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
